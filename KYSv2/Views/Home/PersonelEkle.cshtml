@using KYSv2.Models;
@model user
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

@if (ViewBag.ReturnCode != null)
{
    if (ViewBag.ReturnCode == 0)
    {
        <script type="text/javascript">
            $document

            bootbox.confirm({

                size: "small",
                message: "Are you sure?",
                callback: function (result) { /* result is a boolean; true = OK, false = Cancel*/ }
            })

        </script>
    }
}

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">


    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Personel Ekle</h1>
        </div>
    </div><!--/.row-->


    <div class="row">
        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-body">
                    @using (@Html.BeginForm("Kaydet", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.Label("Role ID")
                            @*@Html.DropDownListFor(m => m.roleID, (List<SelectListItem>)ViewBag.role, new { @class = "form-control" })*@
                            @Html.TextBoxFor(m => m.roleID, new { @class = "form-control" })

                        </div>

                        <div class="form-group">
                            @Html.Label("Kullanıcı Adı")
                            @Html.TextBoxFor(m => m.userName, new { @class = "form-control", @placeholder = "Kullanıcı Adı Giriniz." })

                        </div>
                        <div class="form-group">
                            @Html.Label("Personel Adı")
                            @Html.TextBoxFor(m => m.userFirstName, new { @class = "form-control", @placeholder = "Ad Giriniz." })

                        </div>
                        <div class="form-group">
                            @Html.Label("Personel Soyadı")
                            @Html.TextBoxFor(m => m.userLastName, new { @class = "form-control", @placeholder = "Soyad Giriniz." })

                        </div>
                        <div class="form-group">
                            @Html.Label("Personel Şifresi")
                            @Html.TextBoxFor(m => m.userPassword, new { @type = "password", @class = "form-control", @placeholder = "Sifre Giriniz." })

                        </div>
                        <div class="form-group">
                            @Html.Label("Personel Numarası")
                            @Html.TextBoxFor(m => m.userPhone, new { @class = "form-control", @placeholder = "Telefon Numarası Giriniz." })

                        </div>
                        <div class="form-group">
                            @Html.Label("Personel Adresi")
                            @Html.TextBoxFor(m => m.userAddress, new { @class = "form-control", @placeholder = "Adresi Giriniz." })

                        </div>

                        <div class="form-group">
                            @Html.Label("Personel Mail Adresi")
                            @Html.TextBoxFor(m => m.userEmail, new { @class = "form-control", @placeholder = "Email Giriniz." })

                        </div>
                        <div class="form-group">
                            @Html.Label("Aktif Calisan mi?")
                            @*@Html.DropDownListFor(m => m.isActive, (List<SelectListItem>)ViewBag.user, new { @class = "form-control" })*@
                            @Html.TextBoxFor(m => m.isActive, new { @class = "form-control" })
                            )

                        </div>


                        @Html.HiddenFor(m => m.userID)
                        //Tum validation ozetini kullanmak istersek
                        @Html.ValidationSummary()

                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <a href="/Home/Index" class="btn btn-danger">Iptal</a>

                    }
                </div>
            </div>
        </div><!-- /.panel-->
    </div><!-- /.col-->
</div><!-- /.row -->


<script src="js/jquery-1.11.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/chart.min.js"></script>
<script src="js/chart-data.js"></script>
<script src="js/easypiechart.js"></script>
<script src="js/easypiechart-data.js"></script>
<script src="js/bootstrap-datepicker.js"></script>
<script src="js/custom.js"></script>